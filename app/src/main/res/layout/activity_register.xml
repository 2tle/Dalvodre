<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/tarju"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/justImg"
        android:layout_marginTop="60dp">

    </ImageView>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="E-Mail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/justImg"
        app:layout_constraintBottom_toBottomOf="parent">

    </EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/username"
        android:inputType="text"
        android:hint="닉네임"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/email"
        app:layout_constraintBottom_toBottomOf="@id/pw">

    </EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/pw"
        android:inputType="textPassword"
        android:hint="비밀번호"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/username"
        app:layout_constraintBottom_toBottomOf="@id/regBtn">

    </EditText>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/regBtn"
        app:layout_constraintTop_toTopOf="@id/pw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="회원가입">

    </Button>




</androidx.constraintlayout.widget.ConstraintLayout>