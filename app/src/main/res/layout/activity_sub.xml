        android:fontFamily="@font/cafe24_font"
        android:textSize="55sp"
        android:id="@+id/subBtn"

        >

    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(화면을 터치하세요)"
