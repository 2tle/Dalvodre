<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingActivity">
    <TextView
        android:id="@+id/settext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/settext2"
        android:layout_marginRight="130dp"
        android:text="내 정보 설정"
        android:textSize="35sp"
        >
    </TextView>
    <TextView
        android:id="@+id/settext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/settext1"
        app:layout_constraintBottom_toBottomOf="@id/set_username"
        android:layout_marginRight="240dp"/>
    <EditText
        android:id="@+id/set_username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/settext2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/settext3"
        android:inputType="text"
        android:hint="최대 8자 입력"/>
    <TextView
        android:id="@+id/settext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/set_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/settext4"
        android:layout_marginRight="240dp"/>
    <TextView
        android:id="@+id/settext4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_subtitle"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/settext3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/settext5"/>
    <TextView
        android:id="@+id/settext5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/settext4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/set_pw"
        android:layout_marginRight="240dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/set_pw"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="최소 8자 입력"
        app:layout_constraintTop_toBottomOf="@+id/set_pwch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/settext5"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/set_pwch"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/set_pw"
        app:layout_constraintTop_toBottomOf="@id/settext6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:hint="비밀번호 확인"/>
    <TextView
        android:id="@+id/settext6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 사진"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/set_pwch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="240dp"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>