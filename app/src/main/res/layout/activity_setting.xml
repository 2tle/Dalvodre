<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="40dp"
                android:text="내 정보 설정"
                android:fontFamily="@font/font2"
                android:textSize="35sp"
                android:textColor="#D5000000"/>
            <TextView
                android:id="@+id/settext6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="프로필 사진"
                android:fontFamily="@font/font2"
                android:textSize="20sp"
                android:textColor="#494949"
                android:layout_marginTop="30dp"/>
            <HorizontalScrollView
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/profile1"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile1"
                        android:background="#00ff0000"/>

                    <ImageButton
                        android:id="@+id/profile2"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/profile2"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:background="#00ff0000"/>
                    <ImageButton
                        android:id="@+id/profile3"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/profile3"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:background="#00ff0000"/>
                    <ImageButton
                        android:id="@+id/profile4"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/profile4"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:background="#00ff0000"/>
                    <ImageButton
                        android:id="@+id/profile5"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/profile5"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:background="#00ff0000"/>

                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:text="닉네임"
                android:fontFamily="@font/font2"
                android:textSize="20sp"
                android:textColor="#494949"/>
            <EditText
                android:id="@+id/set_username"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="최대 8자 입력"
                android:text="nickname"
                android:maxLength="8"/>
            <TextView
                android:id="@+id/settext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="이메일"
                android:fontFamily="@font/font2"
                android:textSize="20sp"
                android:textColor="#494949"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/settext4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/nav_header_subtitle"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font2"
                android:layout_gravity="center"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/settext5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:text="비밀번호"
                android:fontFamily="@font/font2"
                android:textSize="20sp"
                android:textColor="#494949"/>
            <EditText
                android:id="@+id/set_pw"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:hint="기존 비밀번호 입력"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/set_pwch"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:hint="변경할 비밀번호 입력"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                >
                <Button
                    android:id="@+id/regBtn"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:text="설정"
                    android:fontFamily="@font/font2"
                    android:textSize="18dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="#A564FF"/>
                <Button
                    android:id="@+id/ccBtn"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:backgroundTint="#959595"
                    android:text="취소"
                    android:fontFamily="@font/font2"
                    android:textSize="18sp"/>
            </LinearLayout>
            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="로그아웃"
                android:fontFamily="@font/font2"
                android:textColor="#CF0000"
                android:textSize="15dp"
                android:background="#00ff0000"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>