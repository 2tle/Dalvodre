<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="40dp"
                android:text="내 정보 설정"
                android:textSize="35sp"/>
            <TextView
                android:id="@+id/settext6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="프로필 사진"
                android:textSize="20sp"
                android:layout_marginTop="30dp"/>
            <HorizontalScrollView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/profile1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/profile1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/profile2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/profile2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/profile3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/profile3"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/profile4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/profile4"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/profile5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/profile5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"/>

                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:text="닉네임"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/set_username"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="최대 8자 입력"/>
            <TextView
                android:id="@+id/settext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="이메일"
                android:textSize="20sp"
                android:layout_marginTop="40dp"/>
            <TextView
                android:id="@+id/settext4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/nav_header_subtitle"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/settext5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:text="비밀번호"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/set_pw"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:hint="최소 8자 입력"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/set_pwch"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:hint="비밀번호 확인"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/regBtn"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:text="설정"
                    android:layout_marginLeft="70dp"
                    android:textSize="20sp"
                    android:backgroundTint="#A564FF"/>
                <Button
                    android:id="@+id/ccBtn"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="#959595"
                    android:text="취소"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>